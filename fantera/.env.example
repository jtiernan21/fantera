# === Privy Authentication ===
# Client-side (exposed to browser)
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id
NEXT_PUBLIC_PRIVY_CLIENT_ID=your-privy-client-id

# Server-side only (NEVER expose to browser)
PRIVY_APP_ID=your-privy-app-id
PRIVY_APP_SECRET=your-privy-app-secret
PRIVY_VERIFICATION_KEY=your-privy-verification-key
PRIVY_WEBHOOK_SIGNING_KEY=your-privy-webhook-signing-key

# === KYC Configuration ===
# Provider: "bridge" for production, "bridge-sandbox" for development/testing
PRIVY_KYC_PROVIDER=bridge-sandbox

# === WalletConnect ===
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# === Supabase Database ===
# Pooled connection (Transaction Mode, port 6543) — runtime queries
DATABASE_URL=postgres://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true
# Direct connection (Session Mode, port 5432) — migrations
DIRECT_URL=postgres://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres

# === Supabase (general) ===
SUPABASE_URL=
SUPABASE_ANON_KEY=
